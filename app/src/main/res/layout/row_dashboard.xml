<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/bg_regular_white_rounded_rect"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_application_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/default_common_padding"
                android:paddingRight="@dimen/default_common_padding">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doc No."/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvApplicationIdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KTFL\BAW\JK\04"
                    app:fontFamily="@font/open_sans_bold"
                    android:textColor="#35A8DF"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_16" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_27">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rev Date"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvApplicationNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/open_sans_regular"
                    app:fontFamily="@font/font_family_medium"
                    android:text="03 Mar 2023"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/title_16"
                    android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_5"
                    android:paddingLeft="@dimen/default_common_padding"
                    android:paddingRight="@dimen/default_common_padding">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStatusTitle"
                        android:textSize="@dimen/text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/label"
                        android:text="TPM Circle Name"
                        android:layout_marginEnd="@dimen/margin_15"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStatusType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:text="Main Module"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:textSize="@dimen/title_16"
                        android:singleLine="true" />

                </LinearLayout>


